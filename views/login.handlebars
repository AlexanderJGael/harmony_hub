<link rel="stylesheet" href="/css/login.css">

<div id="login-container" class="container">
    <div id="login-form" class="form-container border bg-light p-5 rounded" style="width: 500px;">
        <div class="header text-center pb-3">
            <h2 class="font-weight-bold text-primary">HarmonyHub</h2>
        </div>
        <form action="/api/login" method="POST">
            <div class="form-group">
                <label for="loginUsername">Username:</label>
                <input class="form-control" type="text" id="loginUsername" name="loginUsername" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input class="form-control" type="password" id="loginPassword" name="loginPassword" required>
            </div>
            <p id="loginWarning" class="text-danger mt-2"></p>
            <button type="submit" class="btn btn-primary btn-block" id="loginButton">Login</button>
            <a class="form-control btn btn-ghost" href="/register">Register</a>
        </form>
    </div>
</div>
<script src="/js/login.js"></script>