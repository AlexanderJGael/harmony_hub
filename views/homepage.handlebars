<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HarmonyHub</title>
    <link rel="stylesheet" href="/css/style.css">
<body>
    <div class="container">
        <header>
            <div class="row">
                <div class="three columns">
                    <h1><a href="/">HarmonyHub</a></h1>
                </div>
                <div class="nine columns">
                    <nav>
                        {{#if logged_in}}
                            <a href="/profile">Profile</a>
                            <button class="no-button" id="logout">Logout</button>
                        {{else}}
                            <a href="/login">Login</a>
                            <a href="/signup">Sign Up</a>
                    </nav>
                </div>
            </div>
        </header>
        <main>
            <div class="row">
                <div class="twelve columns">
                    <h2>Blog Posts</h2>
                    {{#each posts}}
                        <div class="post">
                            <h3>{{this.title}}</h3>
                            <p><strong>Author:</strong> {{this.author}}</p>
                            <p><strong>Date:</strong> {{this.date}}</p>
                            <p>{{this.content}}</p>
                        </div>
                    {{/each}}
                </div>
            </div>
        </main>
        <footer>
        </footer>
    </div>
    {{#if logged_in}}
        <script src="/js/script.js"></script>
    {{/if}}
</body>
</html>
