{{#if logged_in}}
    <div class="container">
        <header>
            <div class="row">
                <div class="three columns">
                    <h1><a href="/">HarmonyHub</a></h1>
                </div>
                <div class="nine columns">
                    <nav>
                        <a href="/views/profile.handlebars">Profile</a>
                        <button class="no-button" id="logout">Logout</button>
                    </nav>
                </div>
            </div>
        </header>
        <main>
            <div class="row">
                <div class="twelve columns">
                    <h2>Blog Posts</h2>
                    {{#each posts}}
                        <div class="post">
                            <h3>{{this.title}}</h3>
                            <p><strong>Author:</strong> {{this.author}}</p>
                            <p><strong>Date:</strong> {{this.date}}</p>
                            <p>{{this.content}}</p>
                        </div>
                    {{/each}}
                </div>
            </div>
        </main>
    </div>
{{/if}}
